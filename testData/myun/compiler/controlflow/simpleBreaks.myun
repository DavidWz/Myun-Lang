script breaks
    while true do
        print(1)
        break
    end
    // 1

    x := 3
    while x > -5 do
        if x is 1 then
            break
        else
            print(x)
        end
        x = x-1
    end
    // 3, 2

    for i from 5 to 15 do
        print(i)
        if i mod 4 is 0 then
            break
        end
    end
    // 5, 6, 7, 8
end